{
    "lessons": [
        {
            "name": "Modes",
            "commands": ["i", "I", "a", "A", "Esc"],
            "condition": {
                "description": "Insert & Append 5 times",
                "implementationNotes": "pressed i/I or a/A 5 times while in normal mode (after esc press)"
            }
        },

        {
            "name": "Basic Movement",
            "commands": ["h", "j", "k", "l"],
            "condition": {
                "description": "Move around 10 times"
            }
        },

        {
            "name": "Word Movement",
            "commands": ["w", "W", "b", "B", "e", "E", "ge"],
            "condition": {
                "description": "Do 5 forward and 5 backwards word movements",
                "implementationNotes": "w and e are forewards, b and ge are backwards"
            }
        },

        {
            "name": "Count-ing",
            "commands": ["{count}{motion}"],
            "condition": {
                "description": "Prefix learned commands with a count, 10 times",
                "implementationNotes": "concatenate string representation of keycodes together and match them with a regex like /^\\d+[iIaAhjkl]$/"
            }
        },

        {
            "name": "Line Movement",
            "commands": ["^", "$", "0"],
            "condition": {
                "description": "Do line movements 5 times"
            }
        },

        {
            "name": "Document Navigation",
            "commands": ["gg", "G", "{count}G"],
            "condition": {
                "description": "Do vertical line movements 5 times"
            }
        },

        {
            "name": "Anchor Navigation",
            "commands": ["f", "F", "t", "T"],
            "condition": {
                "description": "Do 5 finds and 5 tills"
            }
        },

        {
            "name": "Searching",
            "commands": ["/", "?", "n", "N", ":noh", "*", "#", "%"],
            "condition": {
                "description": "Do 3 searches and 5 */# matches"
            }
        },

        {
            "name": "Selecting",
            "commands": ["v", "V"]
        },

        {
            "name": "Deleting and Changing",
            "commands": ["d", "D", "c", "C", "x", "r"]
        },

        {
            "name": "Copy-Pasting",
            "commands": ["y", "Y", "p", "P"]
        },

        {
            "name": "Double action!!",
            "commands": ["dd", "cc", "yy"]
        },

        {
            "name": "Text Objects and Motions",
            "commands": ["{action}{motion}", "{count}{action}{motion}"]
        },

        {
            "name": "History",
            "commands": ["u", "^r"]
        },

        {
            "name": "Misc Manipulation",
            "commands": [">>", "<<", "~", "."]
        },

        {
            "name": "Entering and Exiting",
            "commands": ["vi", "vim", ":w", ":q", ":wq", ":x", "ZZ", ":q!", ":e", ":vs", ":split"]
        },

        {
            "name": "Buffers",
            "commands": ["\"{buffer}"]
        },

        {
            "name": "Macros",
            "commands": ["q{buffer}", "@{buffer}", "@@"]
        }
    ]
}

